---
import { Icon } from "astro-icon/components";
import { BASE_URL, GITHUB_URL, LINKEDIN_URL } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="sticky top-0 z-50 mb-6 flex items-center justify-between bg-white bg-opacity-90 px-4 py-2 backdrop-blur-sm dark:bg-zinc-900 dark:bg-opacity-90"
>
  <nav class="flex items-center gap-2 sm:gap-4">
    <a href={BASE_URL}> home </a>
    <a href={BASE_URL + "posts"}> posts </a>
  </nav>
  <div class="flex shrink-0 items-center gap-2 sm:gap-4">
    <a
      href={LINKEDIN_URL}
      aria-label="Visit my LinkedIn profile"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Icon name="meteor-icons:linkedin" />
    </a>
    <a
      href={GITHUB_URL}
      aria-label="Visit my GitHub profile"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Icon name="meteor-icons:github" />
    </a>
    <ThemeToggle />
  </div>
</header>

<style>
  a {
    @apply font-medium text-zinc-500 hover:text-zinc-900 hover:underline dark:hover:text-zinc-100;
  }
</style>
