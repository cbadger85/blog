---
import { Icon } from "astro-icon/components";
import { GITHUB_URL, LINKEDIN_URL } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="mx-4 mb-6 mt-2 flex items-center justify-between">
  <nav class="flex items-center gap-4">
    <a href="/"> home </a>
    <a href="/posts"> posts </a>
  </nav>
  <div class="flex items-center gap-4">
    <a href={LINKEDIN_URL} aria-label="Visit my LinkedIn profile" target="_blank" rel="noopener noreferrer">
      <Icon name="meteor-icons:linkedin" />
    </a>
    <a href={GITHUB_URL} aria-label="Visit my GitHub profile" target="_blank" rel="noopener noreferrer">
      <Icon name="meteor-icons:github" />
    </a>
    <ThemeToggle />
  </div>
</header>

<style>
  a {
    @apply font-medium text-zinc-500 hover:text-zinc-900 hover:underline dark:hover:text-zinc-100;
  }
</style>
